#include <stdio.h>
#include <locale.h>

int main(){

    setlocale(LC_ALL, "Portuguese");

    int A, B, resultado, operador;

    printf("BEM-VINDO A CALCULADORA BÁSICA!\n");

    printf("\nDigite o primeiro número a ser calculado: \n");
    scanf("%d", &A);
    fflush(stdin);

    printf("Digite o segundo número a ser calculado: \n");
    scanf("%d", &B);
    fflush(stdin);

    printf("Agora selecione o operador:\n1 - Somar\n2 - Subtrarir\n3 - Multiplicar\n4 - Dividir\n");
    scanf("%d", &operador);
    
    switch (operador){
    case 1:
    printf("\nA opção escolhida resultou em = %d\n\n", resultado = A + B);
	break;
	case 2:
    printf("\nA opção escolhida resultou em = %d\n\n", resultado = A - B);
	break;
	case 3:
    printf("\nA opção escolhida resultou em = %d\n\n", resultado = A * B);
	break;
	case 4:
    printf("\nA opção escolhida resultou em = %d\n\n", resultado = A / B);
	break;
	}
	
	printf("\nA calculadora será finalizada.\n");
	
	system("pause");
	return 0;
}